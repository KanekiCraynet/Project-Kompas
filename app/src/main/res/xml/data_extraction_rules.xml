<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="sensitive_prefs.xml"/>
        <exclude domain="database" path="sensitive_data.db"/>
        
        <!-- Include app preferences -->
        <include domain="sharedpref" path="app_preferences.xml"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow device transfer of app data -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <include domain="file" path="."/>
    </device-transfer>
</data-extraction-rules>
